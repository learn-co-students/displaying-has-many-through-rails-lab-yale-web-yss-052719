<h1>Doctor name: <%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>

<h2>List of appointments: </h2>
<ul>
<% @doctor.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> - Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
    <% end %>
</ul>