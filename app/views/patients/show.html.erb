<h1>Patient name: <%= @patient.name %></h1>
<h2>Patient age: <%= @patient.age %></h2>
<br>
<h2>List of appointments: </h2>
<ul>
<% @patient.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></li>
    <% end %>
</ul>